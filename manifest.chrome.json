{
  "manifest_version": 3,
  "name": "WordPress Nostr Signer",
  "version": "1.0.1",
  "description": "NIP-07 Signer f√ºr WordPress Nostr Integration",
  "permissions": [
    "storage",
    "activeTab",
    "alarms",
    "notifications",
    "sidePanel"
  ],
  "host_permissions": [
    "http://forums.test/*",
    "http://forums.test:*/*",
    "http://127.0.0.1/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://forums.test/*",
        "http://forums.test:*/*",
        "http://127.0.0.1/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "world": "ISOLATED"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inpage.js", "dialog.html", "dialog.css"],
      "matches": [
        "http://forums.test/*",
        "http://forums.test:*/*",
        "http://127.0.0.1/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidebar.html"
  }
}
