{
  "name": "wp-nostr-nip7-signer",
  "version": "1.0.1",
  "description": "NIP-07 Signer Extension for WordPress",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && rollup -c",
    "package:chrome": "npm run build && node scripts/package-chrome.js",
    "package:chrome:only": "node scripts/package-chrome.js",
    "package:firefox": "npm run build && node scripts/package-firefox.js",
    "package:firefox:only": "node scripts/package-firefox.js",
    "sign:firefox": "npm run build && node scripts/sign-firefox.js",
    "sign:firefox:only": "node scripts/sign-firefox.js",
    "release:chrome": "npm run package:chrome && node scripts/release-chrome.js",
    "release:chrome:only": "node scripts/release-chrome.js",
    "dev": "npm run clean && rollup -c -w",
    "test": "vitest run"
  },
  "dependencies": {
    "nostr-tools": "^2.1.5"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.6",
    "rollup-plugin-copy": "^3.5.0",
    "vitest": "^1.2.1"
  },
  "type": "module"
}
